{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/@types"],
    "resolveJsonModule": true,
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
  },
  "lib": ["ES2022"]
}
